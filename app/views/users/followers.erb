<div class="row">
  <div class="col s12 center">
    <h1 class="light-blue-text">You are following...</h1>
  </div>
</div>

<div class="row">
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        <img src="<%= @current_user.image %>" class="responsive-img" alt="profile image">
      </div>
      <div class="card-content">
        <h4 class="center light-blue-text"><%= @current_user.username %></h4>
        <p>Name: <%= @current_user.first_name %> <%= @current_user.last_name %></p>
        <p>Contact: <%= @current_user.email %></p>
      </div>
      <% if @current_user.id == session[:id] %>
        <div class="card-action">
          <a href="/users/<%= @current_user.id %>/edit">Settings</a>
        </div>
      <% end %>
    </div>
  </div>

  <% @user.following_mes.each do |following_me| %>
    <% follower = User.find(following_me.user_id) %>
      <div class="col s12 m8">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= follower.username %></span>
            <p>Latest Chirp: <%= follower.chirps.last.body %></p>
            <p class="light-blue-text">Total Likes: <%= follower.likes.size %></p>
          </div>
        </div>
      </div>
  <% end %>
</div>

<div class="center">
  <a href="/users/<%= @current_user.id %>" class="btn waves-effect waves-light light-blue">Back to Profile</a>
</div>

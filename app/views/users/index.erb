<div class="row">
  <div class="col s12 center">
    <h1 class="light-blue-text">Your Chirps</h1>
  </div>
</div>

<div class="row">
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        <img src="<%= @current_user.image %>" class="responsive-img" alt="profile image">
      </div>
      <div class="card-content">
        <h4 class="center light-blue-text"><%= @current_user.username %></h4>
        <p>Name: <%= @current_user.first_name %> <%= @current_user.last_name %></p>
        <p>Contact: <%= @current_user.email %></p>
      </div>
      <% if @current_user.id == session[:id] %>
        <div class="card-action">
          <a href="/users/<%= @current_user.id %>/edit">Settings</a>
        </div>
      <% end %>
    </div>
  </div>

  <% @users.each do |user| %>
    <% user.chirps.each do |chirp| %>
      <div class="col s12 m8">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= user.username %></span>
            <p><%= chirp.body %></p>
            <p class="light-blue-text">Likes: <%= chirp.likes.size %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<a href="/users/<%= @current_user.id %>" class="btn waves-effect waves-light light-blue">Back to Profile</a>
